# Production Environment Variables for SNGCET Portal
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://sngcet_user:secure_password@cluster.mongodb.net/sngcet_portal?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=sngcet_super_secure_jwt_secret_2025_production_key
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://sngcet-portal.netlify.app,https://sngcet-portal.vercel.app

# Rate Limiting (for 10K students)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@sngcet.edu
EMAIL_PASS=your_email_app_password

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=sngcet_session_secret_2025

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Database Connection Pool (for 10K students)
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000
